<div class="create">
    <nav class="create__nav">
        <div class="create__nav__title">
            <a href="/search">
                <h1 class="museum">Museum </h1>
                <h4 class="museum">at Home</h2>  
            </a>
            
        </div>
        <div class="nav__menu">
            <a class="nav__menu__collection" href="/search">Search paintings</a>
            <a class="nav__menu__collection" href="/create">Your Collection</a>
            <div class="nav__menu__dropdown">
                <a class="nav__menu__dropdown__button" href="#">{{userInSession.firstName}}
                    <i class='fas fa-angle-down'></i>
                </a>
                <ul>
                    <li><a href="/user-profile">Your Profile</a></li>
                    <li><a href="/logout">Log Out</a></li>
                </ul>
            </div>
            {{#if userInSession.profilePhoto}}
            <div class="profile-photo-section"><img class="avatar" src="{{userInSession.profilePhoto}}"></div>
            {{else}}
            <div class="profile-photo-section"><img class="avatar" src="image/profile/0.jpg"></div>
            {{/if}}
        </div>
    </nav>
    <main class="create__body">
        <div class="create__body__left"></div>
        <div class="create__body__center">
            <h1 class="create__body__center__title">Your Museum at Home Collection</h1>
            <div class="create__body__center__share-link">
                {{#if userInSession.collections}}
                {{#if userInSession.publicLink}}
                <p>Go to your collection and share it's public URL using the button below! No sign up required to watch it. </p>
                <a href="collections/{{userInSession.publicLink}}"> shareable public link</a>
                {{else}}
                <p>Generate a <a href="/generate-link">shareable public link</a> for your Collection!</p>
                {{/if}}
                {{/if}} 
            </div>

            
            <div class="create__body__center__board">
                {{#each userInSession.collections}}
                <figure class="artwork">
                    <img class="artwork__img" src="{{this.image}}" alt="{{this.title}}">
                    <figcaption class="artwork__caption">{{this.title}}</figcaption>
                    <form class="artwork__form" action="/delete" method="POST" id="collectionItem">
                        <input value="{{this.image}}" name="collectionItemImage" type="hidden">
                        <input value="{{this.title}}" name="collectionItemTitle" type="hidden">
                        <button type="submit">Remove from Collection</button>
                    </form>
                </figure>
            
                {{/each}}
            </div>
        </div>
        <div class="create__body__right"></div>
    </main>

</div>