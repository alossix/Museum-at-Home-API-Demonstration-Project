                        <form action="/profile-photo" method="POST">
                            <input type="hidden" name="profilePhoto" value="image/profile/7.jpg">
                            <button type="submit">Set as Profile Photo</button>
                        </form>
                    </figure>
                    <figure class="profile-photo__card">
                        <img src="image/profile/8.png" alt="Merry Fiddler">
