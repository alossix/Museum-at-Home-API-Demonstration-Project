    {{/unless}}
    <main class="user__body">
        <div class="user__body__left"></div>
        <div>
            <h2 class="user__body__title">Hi {{userInSession.firstName}}, need some inspiration? Some examples of your
                favourite artist {{userInSession.favArtist}} below:</h2>
            <div class="user__body__artwork">
                {{#each userInSession.favArtistInfo}}
                <figure class="artwork">
                    <img class="artwork__img" src="{{this.[1]}}" alt="{{this.[0]}}">
                    <figcaption class="artwork__caption">{{this.[0]}}</figcaption>
                </figure>
                <form action="/add" method="POST" id="collectionItem">
                    <input value="{{this.[1]}}" name="collectionItemImage" type="hidden">
                    <input value="{{this.[0]}}" name="collectionItemTitle" type="hidden">
                    <button type="submit">Add {{this.[0]}} to your Collection</button>
                </form>
                {{/each}}
            </div>
        </div>
        <div class="user__body__right"></div>
    </main>
</div>