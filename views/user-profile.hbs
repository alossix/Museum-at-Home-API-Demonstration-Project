                        <figcaption>
                            Anna Boudaen Courten
                        </figcaption>
                        <form action="/profile-photo" method="POST">
                            <input type="hidden" name="profilePhoto" value="image/profile/1.jpg">
                            <button type="submit">Set as Profile Photo</button>
                        </form>
                    </figure>
                    <figure class="profile-photo__card">
                        <img src="image/profile/2.jpeg" alt="Salome">
                        <figcaption>
                            Salome
                        </figcaption>
                        <form action="/profile-photo" method="POST">
                            <input type="hidden" name="profilePhoto" value="image/profile/2.jpeg">
                            <button type="submit">Set as Profile Photo</button>
                        </form>
                    </figure>
                    <figure class="profile-photo__card">
                        <img src="image/profile/3.png" alt="Anemic Lady">
                        <figcaption>
                            The Anemic Lady
                        </figcaption>
                        <form action="/profile-photo" method="POST">
                            <input type="hidden" name="profilePhoto" value="image/profile/3.png">
                            <button type="submit">Set as Profile Photo</button>
                        </form>
                    </figure>
                    <figure class="profile-photo__card">
                        <img src="image/profile/4.jpg" alt="The Milkmaid">
