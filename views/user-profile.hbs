                            Self Portrait
                        </figcaption>
                        <form action="/profile-photo" method="POST">
                            <input type="hidden" name="profilePhoto" value="image/profile/11.jpg">
                            <button type="submit">Set as Profile Photo</button>
                        </form>
                    </figure>
                    <figure class="profile-photo__card">
                        <img src="image/profile/12.jpeg" alt="Doctor Pozzi">
                        <figcaption>
                            Doctor Pozzi
                        </figcaption>
                        <form action="/profile-photo" method="POST">
                            <input type="hidden" name="profilePhoto" value="image/profile/12.jpeg">
                            <button type="submit">Set as Profile Photo</button>
                        </form>
                    </figure>
                </div>
            </div>
            {{/unless}}
            <h2 class="user__body__title">Hi {{userInSession.firstName}}, need some inspiration? Some examples of your
                favourite artist {{userInSession.favArtist}} below:</h2>
            <div class="user__body__artwork">
                {{#each userInSession.favArtistInfo}}
                <figure class="artwork">
                    <img class="artwork__img" src="{{this.[1]}}" alt="{{this.[0]}}">
                    <figcaption class="artwork__caption">{{this.[0]}}</figcaption>
                
                    <form class="artwork__form" action="/add" method="POST" id="collectionItem">
                        <input value="{{this.[1]}}" name="collectionItemImage" type="hidden">
                        <input value="{{this.[0]}}" name="collectionItemTitle" type="hidden">
                        <button type="submit">Add to your Collection</button>
                    </form>
                </figure>
                {{/each}}
            </div>
        </div>
        <div class="user__body__right"></div>
    </main>
</div>