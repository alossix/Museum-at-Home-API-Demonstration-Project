<div class="user">
    <nav class="user__nav">
        <div class="title">
            <h1 class="museum">Museum </h1>
            <h4>at home</h2>
        </div>
        <div class="nav__menu">
            <a class="nav__menu__collection" href="/create">View your Collection</a>
            <div class="nav__menu__dropdown">
                <a class="nav__menu__dropdown__button" href="#">{{userInSession.firstName}}
                    <i class='fas fa-angle-down'></i>
                </a>
                <ul>
                    <li><a href="#">Your Profile</a></li>
                    <li><a href="#">Your Collection</a></li>
                    <li><a href="#">Explore</a></li>
                    <li><a href="/logout">Log out</a></li>
                </ul>
            </div>
            <div class="avatar"></div>
        </div>

    </nav>
