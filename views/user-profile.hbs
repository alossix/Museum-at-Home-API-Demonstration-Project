<div class="user">
    <nav class="user__nav">
        <div class="user__nav__title">
            <h1 class="museum">Museum </h1>
            <h4>at Home</h2>
        </div>
        <div class="nav__menu">
            <a class="nav__menu__collection" href="/create">View your Collection</a>
            <div class="nav__menu__dropdown">
                <a class="nav__menu__dropdown__button" href="#">{{userInSession.firstName}}
                    <i class='fas fa-angle-down'></i>
                </a>
                <ul>
                    <li><a href="/user-profile">Your Profile</a></li>
                    <li><a href="#">Your Collection</a></li>
                    <li><a href="#">Explore</a></li>
                    <li><a href="/logout">Log out</a></li>
                </ul>
            </div>
            {{#if userInSession.profilePhoto}}
            <div class="profile-photo-section"><img class="avatar" src="{{userInSession.profilePhoto}}"></div>
            {{else}}
            <div class="profile-photo-section"><img class="avatar" src="image/profile/0.jpg"></div>
            {{/if}}
        </div>

    </nav>
    <main class="user__body">
        <div class="user__body__left"></div>
        <div>
            {{#unless userInSession.profilePhoto}}
            <div class="user__body__profile-pic">
                <h3>Choose your profile photo</h3>
                <div class="profile-photo">
